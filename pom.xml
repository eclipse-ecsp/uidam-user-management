            **/usermanagement/auth/request/dto/*.java,
            **/usermanagement/auth/response/dto/*.java,
            **/usermanagement/cloudprofile/request/dto/*.java,
            **/usermanagement/cloudprofile/response/dto/*.java,
            **/usermanagement/config/*.java,
            **/usermanagement/constants/*.java,
            **/usermanagement/entity/*.java,
            **/usermanagement/enums/*.java,
            **/usermanagement/exception/*.java,
            **/usermanagement/repository/*.java,
            **/usermanagement/user/request/dto/*.java,
            **/usermanagement/user/response/dto/*.java,
            **/usermanagement/UidamUserManagementApplication.java,
            **/usermanagement/utilities/UserChangePasswordPatchMap.java,
            **/usermanagement/utilities/SearchCriteria.java,
            **/usermanagement/exception/handler/ErrorDetails.java,
            **/accountmanagement/constants/*.java,
            **/usermanagement/logging/LoggingRequestInterceptor.java,
            **/BodyInserterWrapper.java,
            **/ClientAddCorrelationIdInterceptor.java
